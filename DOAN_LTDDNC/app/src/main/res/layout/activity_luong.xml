            android:textSize="60px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Songaytre"
            android:layout_width="74dp"
            android:layout_height="85dp"
            android:layout_marginLeft="700px"

            android:layout_marginTop="150px"
