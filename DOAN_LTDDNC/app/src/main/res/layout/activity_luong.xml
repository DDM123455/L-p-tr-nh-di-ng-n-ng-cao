            android:layout_marginLeft="700px"

            android:layout_marginTop="400px"
            android:text="29"
            android:textSize="60px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
