<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemThongBaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="617dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/mediumSpace">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tdtb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tiêu đề thông báo" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/mediumSpace">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ndtb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nội dung" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/mediumSpace">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/matb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mã Thông báo" />
        </com.google.android.material.textfield.TextInputLayout>






        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnThemTB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mediumSpace"
            android:layout_marginEnd="@dimen/smallSpace"
            android:background="@color/colorPrimary"
            android:paddingLeft="@dimen/smallSpace"
            android:paddingRight="@dimen/smallSpace"
            android:text="Thêm thông báo"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/mediumFontSize"
            android:textStyle="normal" />
    </LinearLayout>
</FrameLayout>